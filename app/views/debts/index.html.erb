<div class="page-header">
  <h1>
    Debts
    <a href="/debts/new" class="btn btn-lg btn-success">New Debt</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "debts_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :other_id, "Other" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :other_id_gteq, :class => "form-control", :placeholder => "Other greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :other_id_lteq, :class => "form-control", :placeholder => "Other less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :amount_cont, "Amount contains" %>
    <%= f.text_field :amount_cont, :class => "form-control", :placeholder => "Amount contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Payment Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='paymentgteqcreated_atPicker'>
                  <%= f.text_field :payment_created_at_gteq, :class => "form-control", :placeholder => "Payment Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='paymentlteqcreated_atPicker'>
                  <%= f.text_field :payment_created_at_lteq, :class => "form-control", :placeholder => "Payment Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#paymentgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#paymentlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#paymentgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#paymentlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#paymentlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#paymentgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/debts" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#debts_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Amount</th>
        <th>Other</th>
        <th>Actions</th>
      </tr>

      <% @debts.each do |debt| %>
      <tr>
        <td>
          <% if debt.user.present? %>
            <a href="/users/<%= debt.user.id %>">
              <%= debt.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= debt.amount %></td>
        <td><%= debt.other_id %></td>
        <td>
          <a href="/debts/<%= debt.id %>" class="btn btn-primary">Show</a>
          <a href="/debts/<%= debt.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_debt/<%= debt.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @debts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
