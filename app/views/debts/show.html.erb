<div class="page-header">
  <h3>Debt #<%= @debt.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @debt.user.present? %>
          <a href="/users/<%= @debt.user_id %>">
            <%= @debt.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Amount</dt>
      <dd><%= @debt.amount %></dd>

      <dt>Other</dt>
      <dd><%= @debt.other_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/debts" class="btn btn-primary">
        Back
      </a>
      <a href="/debts/<%= @debt.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_debt/<%= @debt.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
